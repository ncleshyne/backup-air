.posts-wrapper
  .post
    .post-body
      .image-wrap
        = simple_form_for @user, url: {action: "update"}, html: { multipart: true } do |f|
          .row
            .col-md-12
              .form-group.text-center
                %h4 Change your profile image:
                .img-circle.avatar-image
                  = profile_avatar_select(@user)
                = f.input :avatar, label: false,
                                   input_html: { onChange: 'loadFile(event)' }
          .row
            .col-md-1
            .col-md-10.text-center
              .form-group.text-center
                = f.input :full_name, label: false, placeholder: 'Full name'
                = f.input :languages, label: false, placeholder: 'Languages'
                = f.input :response_time, label: false, placeholder: 'Response Time'
                = f.input :address, label: false, placeholder: 'Where you live'
                = f.input :bio, label: false, placeholder: 'About yourself', input_html: { rows: 4 }
            .col-md-1
          .form-group.text-center
            = f.button :submit, 'Update Profile', class: 'btn btn-success'
